@{
    ViewData["Title"] = "Home page";
}

@model DevOps_Site.Models.Script;


<div  style="border: 2px solid black; overflow: auto;" class="text-center">
    <br>
    <h1 class="display-4"><u>Delete</u></h1>
    <br>
    <br>
        <div class="col-lg-6" style="  border-top: 10px solid black;width:auto;display:flex;background:rgb(2, 46, 61);">
            <div class="p-4 d-flex flex-column position-static" style="width: 100%; height: 100%;">
                <div class="card mb-12" style="width: 100%; height: 100%;">
                    <div style="overflow: auto" class="card-body">
                        <h1 class="display-6">Welcome to ASP.NET DevOps: Delete a Script</h1>
                        <div class="row">
                            <div style="width:100%" class="col-md-4">
                                <p class="card-text">
                                    <table class="table" style="max-width:auto;border:2px solid black;">
                                        <tr style="border:2px solid black;">
                                            <th>Script Name</th>
                                            <td style="border:2px solid black;">@Model.ScriptName</td>
                                        </tr>
                                        <tr>
                                            <th>Author Date</th>
                                            <td style="border:2px solid black;">@Model.AuthorDate</td>
                                        </tr>
                                        <tr style="border:2px solid black;">
                                            <th>Author</th>
                                            <td style="border:2px solid black;">@Model.Author</td>
                                        </tr>
                                        <tr style="border:2px solid black;">
                                            <th>Options</th>
                                            <td style="border:2px solid black;">
                                                <a href="/DevOps_Site/Scripts/Delete/@Model.ScriptID">Delete</a>
                                                <a href="/DevOps_Site/Scripts/Details/@Model.ScriptID">Details</a>
                                                <a href="/DevOps_Site/Scripts/Edit/@Model.ScriptID">Edit</a>                                            </td>
                                            </td>
                                        </tr>
                                    </table>
                                    <form method="post" asp-controller="Script" asp-action="Script_Delete">
                                    <input type="hidden" asp-for="ScriptID" name="id" value="@Model.ScriptID" />
                                        <button type="submit" class="btn btn-primary">Confirm Deletion?</button>
                                    </form>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
